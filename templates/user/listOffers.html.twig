{% extends 'base.html.twig' %}

{% block content %}
    {% block title %}
        {% include 'utils/title.html.twig' %}
    {% endblock %}
    <div class="visible" id="listOffers">
            {{ form_start(filterForm, {'attr': {'class': 'form-inline justify-content-between mb-2'} } ) }}
            <div class="form-group">
                {{ form_widget(filterForm.city) }}
                {{ form_widget(filterForm.district) }}
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    {{ form_label(filterForm.date, 'Date', {
                        'label_attr': {'class': 'input-group-text'}}) }}
                </div>
                {{ form_widget(filterForm.date) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.category) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.filter) }}
            </div>
            {{ form_end(filterForm) }}
        <div class="row"></div>
        <div class="table-responsive" id="tableListOffers">
            <table class="table mx-auto table-hover text-center">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Lieu</th>
                        <th>Catégorie</th>
                        <th>Publiée le</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="offerList">
                {% if offers is not empty %}
                    {% for offer in offers %}
                        <tr>
                            <td>{{ offer.title }}</td>
                            <td>{{ offer.description }}</td>
                            <td>{{ offer.city }}</td>
                            <td>{{ offer.category }}</td>
                            <td>{{ offer.publicationDate|localizeddate('long', 'none') }}</td>
                            <td><a href="#" data-toggle="modal" data-target="#detailsOffer" id="showDetailOffer" data-id="{{ offer.id }}" data-page="listOffers" data-title="{{ offer.title }}" data-description="{{ offer.description }}"
                                data-city="{{ offer.city }}" data-category="{{ offer.category }}" data-publicationDate="{{ offer.publicationDate|localizeddate('long', 'none') }}"
                                data-type="{{ offer.offerType }}"><span class="fas fa-info"></span></a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr><td colspan="6"> Il y actuellement aucune offres en attente</td></tr>
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="row mx-0">
            {% if not is_granted('ROLE_USER') %}
                <input id="addOffer" type="button" class="btn btn-primary" value="Ajouter une annonce" onclick="window.location.href='{{ path('login') }}'" />
            {% else %}
                <input id="addOffer" type="button" class="btn btn-primary" value="Ajouter une annonce" onclick="window.location.href='{{ path('addOffer') }}'" />
            {% endif %}
        </div>
    </div>

    {% include 'modal/detailsOffer.html.twig' %}
{% endblock %}