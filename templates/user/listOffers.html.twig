{% extends 'base.html.twig' %}

{% block content %}
    {{ parent() }}
    <div class="row mx-auto">
        <div class="col px-0">
            <button class="btn btn-primary btnSelect" name="btnSelect" id="btnViewOffersJob" data="offerJob">Offres d'emploi</button>
            <button class="btn btn-primary btnSelect" name="btnSelect" id="btnViewOffersSearch" data="searchJob">Personnes</button>
        </div>
    </div>

    <div class="invisible" id="listOffers">
            {{ form_start(filterForm, {'attr': {'class': 'form-inline justify-content-between mb-2'} } ) }}
            <div class="form-group">
                {{ form_widget(filterForm.city) }}
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    {{ form_label(filterForm.date, 'Date', {
                        'label_attr': {'class': 'input-group-text'}}) }}
                </div>
                {{ form_widget(filterForm.date) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.category) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.filter) }}
            </div>
            {{ form_end(filterForm) }}
        <div class="row"></div>
        <div class="table-responsive">
            <table class="table mx-auto table-hover text-center">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Lieu</th>
                        <th>Catégorie</th>
                        <th>Publiée le</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="offerList">
                </tbody>
            </table>
        </div>
    </div>

    {% include 'modal/detailsOffer.html.twig' %}
{% endblock %}