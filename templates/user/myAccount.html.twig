{% extends 'base.html.twig' %}

{% block content %}
    <div class="d-flex justify-content-between">
        <div class="card w-50">
            <div class="card-body">
                <h5 class="card-title">Identifiants</h5>
                <div class="form-group"><input type="text" class="form-control" placeholder="Pseudo"></div>
                <div class="form-group"><input type="password" class="form-control" placeholder="Mot de passe"></div>
            </div>
        </div>
        <div class="card" style="width: 45%;">
            <div class="card-body">
                <h5 class="card-title">Mes documents</h5>
                <p>CV.pdf</p>
                <p>lettre_de_motivation.pdf</p>
                <button class="btn btn-primary">Ajouter des documents</button>
            </div>
        </div>
    </div>
    <div class="mx-auto w-50">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informations personnelles</h5>
                <img class="card-img-top" src="" alt="Photo de profil">
                <div class="form-group"><input type="text" class="form-control" placeholder="Nom"></div>
                <div class="form-group"><input type="password" class="form-control" placeholder="Prénom"></div>
                <div class="form-group"><input type="date" class="form-control" placeholder="Date de naissance"></div>
                <div class="form-group"><input type="email" class="form-control" placeholder="Email"></div>
                <div class="form-group"><input type="email" class="form-control" placeholder="Téléphone fixe"></div>
                <div class="form-group"><input type="email" class="form-control" placeholder="Téléphone mobile"></div>
                <div class="form-group"><input type="email" class="form-control" placeholder="Adresse"></div>
                <div class="form-group"><input type="email" class="form-control" placeholder="Localité"></div>
            </div>
        </div>
        <button class="btn-primary btn">Sauvegarder</button>
    </div>
{% endblock %}