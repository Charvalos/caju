{% extends 'base.html.twig' %}

{% block content %}
    <div class="visible" id="formAddOffer">
    {{ form_start(editFormOffer) }}

    {{ form_row(editFormOffer.title)}}
    <div class="form-group input-group">
        <div class="input-group-prepend">
            {{ form_label(editFormOffer.city, 'Lieu de travail', {
                'label_attr': {'class': 'input-group-text'}}) }}
        </div>
        {{ form_widget(editFormOffer.city) }}
    </div>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            {{ form_label(editFormOffer.category, 'Cat√©gorie', {
                'label_attr': {'class': 'input-group-text'}}) }}
        </div>
        {{ form_widget(editFormOffer.category) }}
    </div>
    {#  {{ form_row(addOfferForm.documents) }} #}
    {{ form_row(editFormOffer.description) }}
    {% if jobOfferStatus %}
        <div class="row d-flex justify-content-between mx-0">
            {{ form_row(editFormOffer.publish, {'label' : 'Modifier'}) }}
        </div>
    {{ form_row(editFormOffer._token) }}
    {{ form_end(editFormOffer, {'render_rest': false }) }}
    {% else %}
        <div class="row d-flex justify-content-between mx-0">
            {{ form_row(editFormOffer.save) }}
            {{ form_row(editFormOffer.publish) }}
        </div>
        {{ form_end(editFormOffer) }}
    {% endif %}
{% endblock %}